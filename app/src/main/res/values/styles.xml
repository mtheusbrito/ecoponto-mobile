<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Activity Principal-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--// Activity Principal-->


    <!-- FullScreen theme Adicionado. -->
    <!-- FullScreen theme. -->
    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- //FullScreen theme. -->

    <!--Activity SplashScreen-->
    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>


    </style>

    <!--//Activity SplashScreen-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay">ThemeOverlay</style>

    <style name="Theme">Theme</style>


    <style name="SearchBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>


    </style>

    <!--Styles usados para a utilização dos CardsView-->
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
    <!--//Styles usados para a utilização dos CardsView-->

</resources>
