<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/v2colorPrimary">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativePrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textNome"
                android:layout_marginTop="100dp"
                android:textColor="@android:color/white"
                android:textSize="34dp"
                android:text="ECOPONTO"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textNome"
                android:id="@+id/textVersao"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="Versão 1.1.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:focusable="true"
                android:focusedByDefault="true"
                android:layout_marginTop="30dp"
               android:layout_below="@id/textVersao"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageLogo"
                android:src="@drawable/icodadosapp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageLogo"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:id="@+id/textASID"
                android:textAlignment="center"
                android:text="© 2019 Ascender Ideias Coop. \n All rigths reserved "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/textASID"
                android:textStyle="normal"
                android:id="@+id/textCompartilhar"
                android:textSize="16sp"
                android:layout_marginTop="50dp"


                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:text="Compartilhar"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/ic_share"
                android:drawableRight="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/textCompartilhar"
                    android:textStyle="normal"
                    android:id="@+id/textParceiros"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"


                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:text="Parceiros:"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/recyclerView"
                    android:layout_below="@id/textParceiros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>







        </android.support.v4.widget.NestedScrollView>

</RelativeLayout>